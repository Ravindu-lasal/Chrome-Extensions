{
  "manifest_version": 3,
  "name": "Budget Manager",
  "version": "1.0",
  "description": "A simple budget management browser extension.",
  "icons": {
    "128": "icon128.png",
    "32": "icon32.png",
    "16": "icon16.png"
  },

  "action": {
    "default_icon": "icon32.png",
    "default_popup": "popup.html"
  },

  "options_page": "options.html",

  "background": {
    "service_worker": "eventPage.js"
   },

  "permissions": ["storage", "notifications", "contextMenus"]
}
